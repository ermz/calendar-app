<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/calendar.css">

  </head>

  <body>

    <%- include header.ejs %>

    <h1>Hello Calendar app</h1>
    <form name="show-calendar">
      <% const firstDay = new Date() %>
      <%= new Date(firstDay.getTime() + (24 * 60 * 60 * 30000)).toString().slice(0,10).split(" ")[0] %>
      <input type="button" id="name"  placeholder="hello"/>
      <button><%= firstDay %></button>
    </form>


    <p id="testing-p">hello testing</p>


    <div id="calendar"></p>
      <% var dayCounter = 0 %>
      <% var counter = 0 %>
      <% while (counter < 7) { %>
        <% var currentDay = new Date(firstDay.getTime() + (24 * 60 * 60 * dayCounter)).toString().slice(0,10) %>
        <% var currentDayArr = currentDay.split(" ") %>

        <% if (currentDayArr[0] !== "Sat" && currentDayArr[0] !== "Sun") { %>
          <div class="indi-day-info">
            <form name="show-available-dates-<%= counter %>">
              <input type="hidden" name="show-individual-date-<%= counter %>"  value="<%= currentDay %>"/>
              <button><%= currentDay %></button>
            </form>
            <div class="show-slot">
              <%- include slots.ejs %>
            </div>
          </div>
          <% counter += 1 %>
        <% } %>


        <% dayCounter += 1000 %>
      <% } %>
    </div>

    <script src="/js/app.js"></script>
  </body>


</html>
